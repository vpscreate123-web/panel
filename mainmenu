step(){ echo -e "${BLUE}âœ $1${RESET}"; }
ok(){ echo -e "${GREEN}âœ” $1${RESET}"; }
warn(){ echo -e "${YELLOW}âš  $1${RESET}"; }
fail(){ echo -e "${RED}âœ– $1${RESET}"; }

# -------- EFFECTS --------

type_write() {
    text="$1"
    delay=0.01
    for (( i=0; i<${#text}; i++ )); do
        echo -ne "${text:$i:1}"
        sleep $delay
    done
    echo ""
}

